<UserControl x:Class="Core2D.Controls.Editor.PageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="using:Core2D"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:iac="using:Avalonia.Xaml.Interactions.Custom"
             xmlns:idd="using:Avalonia.Xaml.Interactions.DragAndDrop"
             xmlns:dd="using:Core2D.Behaviors.DragAndDrop"
             xmlns:behaviors="using:Core2D.Behaviors"
             xmlns:paz="using:Avalonia.Controls.PanAndZoom"
             xmlns:renderer="using:Core2D.Views.Renderer"
             xmlns:vme="using:Core2D.ViewModels.Editor"
             xmlns:vmd="using:Core2D.ViewModels.Designer"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"
            x:DataType="vme:ProjectEditorViewModel" x:CompileBindings="True">
  <UserControl.Resources>
    <VisualBrush x:Key="TemplateCheckerBoard" TileMode="Tile" SourceRect="0,0,20,20" DestinationRect="0,0,20,20">
      <VisualBrush.Visual>
        <Path Data="M 0,0 L 0,10 L 10,10 L 10,0 Z M 10,10 L 10,20 L 20,20 L 20,10 Z" Fill="#FFF0F0F0" />
      </VisualBrush.Visual>
    </VisualBrush>
  </UserControl.Resources>
  <Panel>
    <Panel Background="Transparent"
           d:DataContext="{x:Static vmd:DesignerContext.Editor}"
           x:DataType="vme:ProjectEditorViewModel" 
           x:CompileBindings="False">
      <i:Interaction.Behaviors>
        <behaviors:AttachEditorBehavior />
        <iac:FocusOnAttachedToVisualTreeBehavior />
        <!--<iac:FocusOnPointerMovedBehavior />-->
      </i:Interaction.Behaviors>
      <Panel.KeyBindings>
        <!-- Edit -->
        <KeyBinding Command="{Binding ClipboardService.OnDelete}" CommandParameter="{Binding}" Gesture="Delete" />
        <KeyBinding Command="{Binding ClipboardService.OnDelete}" CommandParameter="{Binding}" Gesture="Back" />
        <KeyBinding Command="{Binding OnCancel}" Gesture="Escape" />
        <KeyBinding Command="{Binding OnUndo}" Gesture="{app:PlatformGesture Text=Primary+Z}" />
        <KeyBinding Command="{Binding OnRedo}" Gesture="{app:PlatformGesture Text=Primary+Y}" />
        <KeyBinding Command="{Binding ClipboardService.OnCut}" Gesture="{app:PlatformGesture Text=Primary+X}" />
        <KeyBinding Command="{Binding ClipboardService.OnCopy}" Gesture="{app:PlatformGesture Text=Primary+C}" />
        <KeyBinding Command="{Binding ClipboardService.OnPaste}" Gesture="{app:PlatformGesture Text=Primary+V}" />
        <KeyBinding Command="{Binding SelectionService.OnSelectAll}" Gesture="{app:PlatformGesture Text=Primary+A}" />
        <!-- View -->
        <KeyBinding Command="{Binding Platform.OnZoomReset}" Gesture="{app:PlatformGesture Text=Primary+D0}" />
        <KeyBinding Command="{Binding Platform.OnZoomReset}" Gesture="{app:PlatformGesture Text=Primary+NumPad0}" />
        <KeyBinding Command="{Binding Platform.OnZoomReset}" Gesture="Z" />
        <KeyBinding Command="{Binding Platform.OnZoomUniform}" Gesture="{app:PlatformGesture Text=Primary+D1}" />
        <KeyBinding Command="{Binding Platform.OnZoomUniform}" Gesture="{app:PlatformGesture Text=Primary+NumPad1}" />
        <KeyBinding Command="{Binding Platform.OnZoomUniform}" Gesture="X" />
        <KeyBinding Command="{Binding Platform.OnZoomUniformToFill}" Gesture="{app:PlatformGesture Text=Primary+D2}" />
        <KeyBinding Command="{Binding Platform.OnZoomUniformToFill}" Gesture="{app:PlatformGesture Text=Primary+NumPad2}" />
        <KeyBinding Command="{Binding Platform.OnZoomFill}" Gesture="{app:PlatformGesture Text=Primary+D3}" />
        <KeyBinding Command="{Binding Platform.OnZoomFill}" Gesture="{app:PlatformGesture Text=Primary+NumPad3}" />
        <KeyBinding Command="{Binding Platform.OnZoomAutoFit}" Gesture="{app:PlatformGesture Text=Primary+D4}" />
        <KeyBinding Command="{Binding Platform.OnZoomAutoFit}" Gesture="{app:PlatformGesture Text=Primary+NumPad4}" />
        <KeyBinding Command="{Binding Platform.OnZoomIn}" Gesture="{app:PlatformGesture Text=Primary+Add}" />
        <KeyBinding Command="{Binding Platform.OnZoomIn}" Gesture="{app:PlatformGesture Text=Primary+OemPlus}" />
        <KeyBinding Command="{Binding Platform.OnZoomOut}" Gesture="{app:PlatformGesture Text=Primary+Subtract}" />
        <KeyBinding Command="{Binding Platform.OnZoomOut}" Gesture="{app:PlatformGesture Text=Primary+OemMinus}" />
        <!-- Options -->
        <KeyBinding Command="{Binding OnToggleDefaultIsStroked}" Gesture="K" />
        <KeyBinding Command="{Binding OnToggleDefaultIsFilled}" Gesture="F" />
        <KeyBinding Command="{Binding OnToggleDefaultIsClosed}" Gesture="D" />
        <KeyBinding Command="{Binding OnToggleSnapToGrid}" Gesture="G" />
        <KeyBinding Command="{Binding OnToggleTryToConnect}" Gesture="C" />
        <!-- Shape -->
        <KeyBinding Command="{Binding ShapeService.OnDuplicateSelected}" Gesture="{app:PlatformGesture Text=Primary+D}" />
        <KeyBinding Command="{Binding ShapeService.OnGroupSelected}" Gesture="{app:PlatformGesture Text=Primary+G}" />
        <KeyBinding Command="{Binding ShapeService.OnExplodeSelected}" Gesture="{app:PlatformGesture Text=Primary+U}" />
        <KeyBinding Command="{Binding ShapeService.OnRotateSelected}" CommandParameter="90" Gesture="{app:PlatformGesture Text=Primary+R}" />
        <KeyBinding Command="{Binding ShapeService.OnRotateSelected}" CommandParameter="-90" Gesture="{app:PlatformGesture Text=Primary+L}" />
        <KeyBinding Command="{Binding ShapeService.OnFlipHorizontalSelected}" Gesture="{app:PlatformGesture Text=Primary+H}" />
        <KeyBinding Command="{Binding ShapeService.OnFlipVerticalSelected}" Gesture="{app:PlatformGesture Text=Primary+J}" />
        <KeyBinding Command="{Binding ShapeService.OnMoveUpSelected}" Gesture="Up" />
        <KeyBinding Command="{Binding ShapeService.OnMoveDownSelected}" Gesture="Down" />
        <KeyBinding Command="{Binding ShapeService.OnMoveLeftSelected}" Gesture="Left" />
        <KeyBinding Command="{Binding ShapeService.OnMoveRightSelected}" Gesture="Right" />
        <KeyBinding Command="{Binding ShapeService.OnStackHorizontallySelected}" Gesture="Shift+H" />
        <KeyBinding Command="{Binding ShapeService.OnStackVerticallySelected}" Gesture="Shift+Y" />
        <KeyBinding Command="{Binding ShapeService.OnDistributeHorizontallySelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+H}" />
        <KeyBinding Command="{Binding ShapeService.OnDistributeVerticallySelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Y}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignLeftSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Left}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignCenteredSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+OemMinus}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignCenteredSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Subtract}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignRightSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Right}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignTopSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Up}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignCenterSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+OemPipe}" />
        <KeyBinding Command="{Binding ShapeService.OnAlignBottomSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+Down}" />
        <KeyBinding Command="{Binding ShapeService.OnBringToFrontSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+OemCloseBrackets}" />
        <KeyBinding Command="{Binding ShapeService.OnBringForwardSelected}" Gesture="{app:PlatformGesture Text=Primary+OemCloseBrackets}" />
        <KeyBinding Command="{Binding ShapeService.OnSendBackwardSelected}" Gesture="{app:PlatformGesture Text=Primary+OemOpenBrackets}" />
        <KeyBinding Command="{Binding ShapeService.OnSendToBackSelected}" Gesture="{app:PlatformGesture Text=Primary+Shift+OemOpenBrackets}" />
        <KeyBinding Command="{Binding ShapeService.OnPathBreak}" Gesture="{app:PlatformGesture Text=Primary+B}" />
        <KeyBinding Command="{Binding ShapeService.OnPathOp}" CommandParameter="Difference" Gesture="{app:PlatformGesture Text=Primary+Shift+D}" />
        <KeyBinding Command="{Binding ShapeService.OnPathOp}" CommandParameter="Intersect" Gesture="{app:PlatformGesture Text=Primary+Shift+I}" />
        <KeyBinding Command="{Binding ShapeService.OnPathOp}" CommandParameter="Union" Gesture="{app:PlatformGesture Text=Primary+Shift+U}" />
        <KeyBinding Command="{Binding ShapeService.OnPathOp}" CommandParameter="Xor" Gesture="{app:PlatformGesture Text=Primary+Shift+X}" />
        <KeyBinding Command="{Binding ShapeService.OnPathOp}" CommandParameter="ReverseDifference" Gesture="{app:PlatformGesture Text=Primary+Shift+R}" />
        <!-- Format -->
        <KeyBinding Command="{Binding StyleEditor.OnCopyStyle}" Gesture="{app:PlatformGesture Text=Primary+Shift+C}" />
        <KeyBinding Command="{Binding StyleEditor.OnPasteStyle}" Gesture="{app:PlatformGesture Text=Primary+Shift+V}" />
        <!-- Tool -->
        <KeyBinding Command="{Binding OnToolNone}" Gesture="N" />
        <KeyBinding Command="{Binding OnToolSelection}" Gesture="S" />
        <KeyBinding Command="{Binding OnToolPoint}" Gesture="P" />
        <KeyBinding Command="{Binding OnToolLine}" Gesture="L" />
        <KeyBinding Command="{Binding OnToolWire}" Gesture="W" />
        <KeyBinding Command="{Binding OnToolArc}" Gesture="A" />
        <KeyBinding Command="{Binding OnToolCubicBezier}" Gesture="B" />
        <KeyBinding Command="{Binding OnToolQuadraticBezier}" Gesture="Q" />
        <KeyBinding Command="{Binding OnToolPath}" Gesture="H" />
        <KeyBinding Command="{Binding OnToolMove}" Gesture="M" />
        <KeyBinding Command="{Binding OnToolRectangle}" Gesture="R" />
        <KeyBinding Command="{Binding OnToolEllipse}" Gesture="E" />
        <KeyBinding Command="{Binding OnToolText}" Gesture="T" />
        <KeyBinding Command="{Binding OnToolImage}" Gesture="I" />
      </Panel.KeyBindings>
      <Panel Background="#FFF5F5F5" />
      <Panel Background="{DynamicResource TemplateCheckerBoard}" />
      <Panel>
        <Panel ClipToBounds="True">
          <ScrollViewer x:Name="PageScrollViewer" 
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Disabled">
            <paz:ZoomBorder x:Name="PageZoomBorder"
                            Stretch="None"
                            ZoomSpeed="1.5" 
                            PanButton="Middle" 
                            EnablePan="True" 
                            EnableZoom="True"
                            Background="Transparent" 
                            ClipToBounds="False"
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch">
              <paz:ZoomBorder.ContextMenu>
                <ContextMenu x:Name="TemplateContextMenu" DataContext="{Binding #PageZoomBorder.DataContext}">
                  <MenuItem Header="Cu_t" Command="{Binding ClipboardService.OnCut}" InputGesture="{app:PlatformGesture Text=Primary+X}" />
                  <MenuItem Header="_Copy" Command="{Binding ClipboardService.OnCopy}" InputGesture="{app:PlatformGesture Text=Primary+C}" />
                  <MenuItem Header="_Paste" Command="{Binding ClipboardService.OnPaste}" InputGesture="{app:PlatformGesture Text=Primary+V}" />
                  <MenuItem Header="_Delete" Command="{Binding ClipboardService.OnDelete}" CommandParameter="{Binding}" InputGesture="Delete" />
                </ContextMenu>
              </paz:ZoomBorder.ContextMenu>
              <i:Interaction.Behaviors>
                <behaviors:EnableContextMenuBehavior IsEnabled="{Binding $parent[UserControl].DataContext.IsToolIdle}"
                                                     ContextMenu="{Binding #TemplateContextMenu}"/>
              <idd:ContextDropBehavior Context="{Binding FallbackValue={x:Null}}">
                <idd:ContextDropBehavior.Handler>
                  <dd:PageDropHandler RelativeTo="{Binding #ContainerPanel}" />
                </idd:ContextDropBehavior.Handler>
              </idd:ContextDropBehavior>
              </i:Interaction.Behaviors>
              <Panel DataContext="{Binding Project.CurrentContainer}" 
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     ClipToBounds="False">
                <Panel.Transitions>
                  <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
                  </Transitions>
                </Panel.Transitions>
                <Panel x:Name="ContainerPanel"
                       Background="Transparent"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Width="{Binding Template.Width, TargetNullValue={Binding Width}}"
                       Height="{Binding Template.Height, TargetNullValue={Binding Height}}"
                       ClipToBounds="False">
                  <renderer:RenderView x:Name="RenderViewData"
                                       Renderer="{Binding $parent[UserControl].DataContext.Renderer}"
                                       Selection="{Binding $parent[UserControl].DataContext.Project}"
                                       DataFlow="{Binding $parent[UserControl].DataContext.DataFlow}"
                                       Container="{Binding}"
                                       RenderType="Data"
                                       ClipToBounds="False" />
                  <renderer:RenderView x:Name="RenderViewTemplate"
                                       Renderer="{Binding $parent[UserControl].DataContext.Renderer}"
                                       Selection="{Binding $parent[UserControl].DataContext.Project}"
                                       DataFlow="{Binding $parent[UserControl].DataContext.DataFlow}"
                                       Container="{Binding}"
                                       RenderType="Template"
                                       ClipToBounds="False" />
                  <renderer:RenderView x:Name="RenderViewEditor"
                                       Renderer="{Binding $parent[UserControl].DataContext.Renderer}"
                                       Selection="{Binding $parent[UserControl].DataContext.Project}"
                                       DataFlow="{Binding $parent[UserControl].DataContext.DataFlow}"
                                       Container="{Binding}"
                                       RenderType="Editor"
                                       ClipToBounds="False" />
                </Panel>
              </Panel>
            </paz:ZoomBorder>
          </ScrollViewer>
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</UserControl>
