<UserControl x:Class="Core2D.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="using:Core2D"
             xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             xmlns:vme="using:Core2D.ViewModels.Editor"
             xmlns:vmd="using:Core2D.ViewModels.Designer"
             xmlns:cd="clr-namespace:Core2D.Controls.Dialog"
             FontFamily="{DynamicResource UiFontFamily}"
             Background="{DynamicResource AcrylicFallbackColor}"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.Editor}"
             d:DesignWidth="1200" d:DesignHeight="580"
             x:DataType="vme:ProjectEditorViewModel" x:CompileBindings="True">
  <UserControl.KeyBindings>
    <KeyBinding Command="{Binding OnNew}" CommandParameter="{Binding}" Gesture="{app:PlatformGesture Text=Primary+N}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding Platform.OnOpen}" Gesture="{app:PlatformGesture Text=Primary+O}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding OnCloseProject}" Gesture="{app:PlatformGesture Text=Primary+F4}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding Platform.OnSave}" Gesture="{app:PlatformGesture Text=Primary+S}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding Platform.OnSaveAs}" Gesture="{app:PlatformGesture Text=Primary+Shift+S}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding Platform.OnExport}" Gesture="{app:PlatformGesture Text=Primary+E}" x:CompileBindings="False" />
    <KeyBinding Command="{Binding Platform.OnExit}" Gesture="Alt+F4" x:CompileBindings="False" />
  </UserControl.KeyBindings>
  <Panel>
    <Panel>
      <idc:DockControl Layout="{Binding RootDock}" />
    </Panel>
    <cd:DialogPresenterView IsVisible="{Binding !!Dialogs.Count}" />
  </Panel>
</UserControl>
