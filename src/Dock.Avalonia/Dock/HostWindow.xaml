<Window x:Class="Dock.Avalonia.Dock.HostWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
        xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
        xmlns:idd="clr-namespace:Dock.Avalonia.Dock;assembly=Dock.Avalonia"
        xmlns:idh="clr-namespace:Dock.Avalonia.Handlers;assembly=Dock.Avalonia"
        xmlns:Dock="clr-namespace:Dock.Model;assembly=Dock.Model"
        Width="300" Height="400"
        UseLayoutRounding="True"
        WindowState="Normal"
        Title="{Binding #dock.DataContext.CurrentView.Title, FallbackValue=Dock}">
    <i:Interaction.Behaviors>
        <id:DropBehavior Context="{Binding Layout}" Handler="{x:Static idh:DockDropHandler.Instance}"/>
    </i:Interaction.Behaviors>
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <idd:DockControl x:Name="dock" Grid.Column="{Binding Column}" Grid.Row="{Binding Row}"/>
    </Grid>
</Window>
